<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orangered"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            style="@style/personal_data_LinearLayout_public_1"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/back" />

        <TextView
            style="@style/personal_data_LinearLayout_public"
            android:layout_marginLeft="10dp"
            android:text="个人资料"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView3"
            style="@style/personal_data_LinearLayout_public_1"
            android:layout_marginRight="28dp"
            android:text="保存"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            style="@style/personal_data_LinearLayout_public"
            app:srcCompat="@drawable/add" />

        <TextView
            android:id="@+id/textView4"
            style="@style/personal_data_LinearLayout_public"
            android:text="更换头像" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <LinearLayout style="@style/personal_data_LinearLayout">

            <TextView
                style="@style/personal_data_LinearLayout_TextView"
                android:text="昵称:" />

            <EditText
                android:id="@+id/editTextNum"
                style="@style/personal_data_LinearLayout_EditText" />

        </LinearLayout>

        <LinearLayout style="@style/personal_data_LinearLayout">

            <TextView
                style="@style/personal_data_LinearLayout_TextView"
                android:gravity="right"
                android:text="性别:" />

            <EditText
                android:id="@+id/editTextNum2"
                style="@style/personal_data_LinearLayout_EditText" />

        </LinearLayout>

        <LinearLayout style="@style/personal_data_LinearLayout">

            <TextView
                style="@style/personal_data_LinearLayout_TextView"
                android:text="年龄:" />

            <EditText
                android:id="@+id/editTextNum3"
                style="@style/personal_data_LinearLayout_EditText" />

        </LinearLayout>

        <LinearLayout style="@style/personal_data_LinearLayout">

            <TextView
                style="@style/personal_data_LinearLayout_TextView"
                android:text="身高:" />

            <EditText
                android:id="@+id/editTextNum4"
                style="@style/personal_data_LinearLayout_EditText" />

        </LinearLayout>

        <LinearLayout style="@style/personal_data_LinearLayout">

            <TextView
                style="@style/personal_data_LinearLayout_TextView"
                android:text="体重:" />

            <EditText
                android:id="@+id/editTextNum5"
                style="@style/personal_data_LinearLayout_EditText" />

        </LinearLayout>

        <LinearLayout style="@style/personal_data_LinearLayout">

            <TextView
                style="@style/personal_data_LinearLayout_TextView"
                android:text="目标:" />

            <EditText
                android:id="@+id/editTextNum6"
                style="@style/personal_data_LinearLayout_EditText" />

        </LinearLayout>

        <LinearLayout style="@style/personal_data_LinearLayout">

            <TextView
                style="@style/personal_data_LinearLayout_TextView"
                android:text="工作强度:" />

            <EditText
                android:id="@+id/editTextNum7"
                style="@style/personal_data_LinearLayout_EditText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
