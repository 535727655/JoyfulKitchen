<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayout_vertical_m_m">


    <LinearLayout
        style="@style/LinearLayout_vertical_m_w"
        android:layout_weight="2.3"
        android:background="@color/orangered_a">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                style="@style/personal_data_LinearLayout_public_1"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/back" />

            <TextView
                style="@style/personal_data_LinearLayout_public"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView1"
                style="@style/personal_data_LinearLayout_public_1"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/a" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:gravity="bottom"
                android:text="用户名"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#80eaeaea"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="美食帖"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="菜谱"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout_vertical_m_w"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#F1EFE3" />

        <LinearLayout
            style="@style/LinearLayout_horizontal_m_w"
            android:scrollbars="vertical">

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_a"
                app:srcCompat="@drawable/add" />

            <TextView
                style="@style/personal_user_LinearLayout_My_collection_TextView"
                android:text="我的收藏" />

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_b"
                app:srcCompat="@drawable/back" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal_m_w"
            android:scrollbars="vertical">

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_a"
                app:srcCompat="@drawable/add" />

            <TextView
                style="@style/personal_user_LinearLayout_My_collection_TextView"
                android:text="我的下载" />

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_b"
                app:srcCompat="@drawable/add" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal_m_w"
            android:scrollbars="vertical">

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_a"
                app:srcCompat="@drawable/add" />

            <TextView
                style="@style/personal_user_LinearLayout_My_collection_TextView"
                android:text="浏览历史" />

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_b"
                app:srcCompat="@drawable/add" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal_m_w"
            android:scrollbars="vertical">

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_a"
                app:srcCompat="@drawable/add" />

            <TextView
                style="@style/personal_user_LinearLayout_My_collection_TextView"
                android:text="我的积分" />

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_b"
                app:srcCompat="@drawable/add" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal_m_w"
            android:scrollbars="vertical">

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_a"
                app:srcCompat="@drawable/add" />

            <TextView
                style="@style/personal_user_LinearLayout_My_collection_TextView"
                android:text="我的订单" />

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_b"
                app:srcCompat="@drawable/add" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#F1EFE3" />
        <LinearLayout
            style="@style/LinearLayout_horizontal_m_w"
            android:scrollbars="vertical">

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_a"
                app:srcCompat="@drawable/add" />

            <TextView
                style="@style/personal_user_LinearLayout_My_collection_TextView"
                android:text="系统设置" />

            <ImageView
                style="@style/personal_user_LinearLayout_My_collection_ImageView_b"
                app:srcCompat="@drawable/add" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
