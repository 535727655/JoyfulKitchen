<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_next_step"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="25dp"
            tools:ignore="HardcodedText,InefficientWeight,SpUsage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="2/2"
            android:textColor="#b0ffffff"
            android:textSize="32dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="请告诉我你的性别、身高、体重 \n 为你提供的定制会更精确"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="HardcodedText,SpUsage" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginTop="17.0dip"
        android:background="@drawable/register_info_line" />


    <RelativeLayout
        android:id="@+id/selectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23.0dip"
            android:includeFontPadding="false"
            android:maxHeight="16.0sp"
            android:text="生日"
            android:textColor="#ccffffff"
            android:textSize="15.0sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="250.0dip"
            android:layout_height="52.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/register_birthday"
            android:gravity="center"
            android:padding="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginBottom="18.0dip"
        android:layout_marginTop="22.0dip"
        android:background="@drawable/register_info_line" />

    <RelativeLayout
        android:id="@+id/show_dialog_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip"
            android:includeFontPadding="false"
            android:maxHeight="16.0sp"
            android:text="目标"
            android:textColor="#ccffffff"
            android:textSize="15.0sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="250.0dip"
            android:layout_height="52.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/register_birthday"
            android:gravity="center"
            android:padding="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginBottom="18.0dip"
        android:layout_marginTop="22.0dip"
        android:background="@drawable/register_info_line" />

    <RelativeLayout
        android:id="@+id/show_dialog_work_intensity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip"
            android:includeFontPadding="false"
            android:maxHeight="16.0sp"
            android:text="工作强度"
            android:textColor="#ccffffff"
            android:textSize="15.0sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_work_intensity"
            android:layout_width="250.0dip"
            android:layout_height="52.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18.0dip"
            android:layout_marginTop="50dp"
            android:background="@drawable/register_birthday"
            android:gravity="center"
            android:padding="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <Button
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14C143"
        android:padding="10dp"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="22dp"
        tools:ignore="HardcodedText,SpUsage" />

</LinearLayout>
