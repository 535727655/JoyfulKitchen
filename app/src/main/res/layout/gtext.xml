<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/Yface"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/my"
                        />
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="helloworld"
                            />
                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2分钟前"
                            />
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/follow"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="[午饭好了] 菌汤 土豆丝 爸爸闲太素了要的辣的爆猪肚.菌汤很棒！！"
                    />
                <!-- 图片块-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="300dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"

                        android:src="@mipmap/juntang"/>
                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="300dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/tds"/>

                    <ImageView
                        android:layout_width="400dp"
                        android:layout_height="300dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/bao"
                        android:id="@+id/imageView" />

                <!-- 评论-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"

                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/someFace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/my"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/someName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="张如玉"/>
                            <TextView
                                android:id="@+id/talk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="姐姐好棒"/>
                            <TextView
                                android:id="@+id/talkDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="03-31 18:04"/>
                            <TextView
                                android:id="@+id/replay"
                                android:layout_marginLeft="200dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="回复"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>